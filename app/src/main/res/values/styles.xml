<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorSearch</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorTrivia</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WelcomeErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <color name="dsb_progress_color">#ff009688</color>
    <color name="dsb_track_color">#ff939393</color>
    <color name="dsb_disabled_color">#66939393</color>
    <color name="dsb_ripple_color_pressed">#77939393</color>
    <color name="dsb_ripple_color_focused">#99999999</color>

    <style name="Widget.DiscreteSeekBar" parent="android:Widget">
        <item name="dsb_indicatorTextAppearance">@style/Widget.DiscreteIndicatorTextAppearance</item>
        <item name="dsb_progressColor">@color/dsb_progress_color_list</item>
        <item name="dsb_trackColor">@color/dsb_track_color_list</item>
        <item name="dsb_rippleColor">@color/dsb_ripple_color_list</item>
        <item name="dsb_indicatorColor">@color/dsb_progress_color</item>
        <item name="dsb_indicatorElevation">4dp</item>
        <item name="dsb_mirrorForRtl">true</item>
    </style>
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/fab_menu_colorNormal</item>
        <item name="fab_colorPressed">@color/fab_menu_colorPressed</item>
        <item name="fab_colorRipple">@color/fab_menu_colorRipple</item>
    </style>

    <style name="Widget.DiscreteIndicatorTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="RatingBar_Yellow_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_small</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="RatingBar_Yellow_Middle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_middle</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

</resources>
