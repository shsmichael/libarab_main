<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorSearch" android:startColor="@color/colorSearch" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="#0fb1fa" />

                    <corners android:radius="15dp" />

                    <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_dropdown" />

            </item>

        </layer-list>

    </item>

</selector>