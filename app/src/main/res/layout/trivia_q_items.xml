<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffffff"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_item_image"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz_items_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:text="@string/search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_tag_trivia"
                    android:textColor="@color/white"
                    android:id="@+id/tv_title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Book Title"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:text="@string/search_creation_date"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_tag_trivia"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_creationdate"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/tertiary_text_light"
                    android:text="July 3, 1962"
                    android:textSize="12sp"
                    android:autoText="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <TextView
                    android:text="@string/search_author"
                    android:background="@drawable/textview_tag_trivia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Michael Jackson"
                    android:gravity="right"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:singleLine="false"
                    android:textSize="12sp"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:text="@string/search_publisher"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_tag_trivia"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_publisher"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/tertiary_text_light"
                    android:text="The National Libary"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
